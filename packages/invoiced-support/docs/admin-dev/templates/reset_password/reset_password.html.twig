{% extends 'base.html.twig' %}

{% block title %}Invoiced | Reset Password{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/auth.css') }}" />
{% endblock %}


{% block body %}

  <div class="register-page">
    <div id="form" class="form">
    <img src="{{ asset('/img/logo.png') }}" alt="Invoiced" width="175" style="padding-bottom: 25px">
    <div class="form-errors"> 
      {{ form_errors(form) }}
    </div>
      {{ form_start(form) }}
        <input type="password" id="oldPassword" name="_old_password" placeholder="old password"/>
        {{ form_row(form.password.first, {'attr' : {'placeholder': 'new password'}}) }}
        {{ form_row(form.password.second, {'attr' : {'placeholder': 'confirm new password'}}) }}
        <button type="submit">Reset Password</button>
      {{ form_end(form) }}
    </div>
  </div>

{% endblock %}