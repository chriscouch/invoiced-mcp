{% form_theme form with '@EasyAdmin/crud/form_theme.html.twig' %}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Monthly Reports{% endblock %}

{% block body_class 'ea-edit' %}

{% block main %}
    {{ form_start(form) }}

    {% if error is defined %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <div class="row">
        <div class="col-md-6 col-xxl-5">
            {{ form_widget(form) }}
        </div>
    </div>

    <section class="content-footer">
        <div class="form-actions">
            <button type="submit" class="btn btn-primary btn">Generate</button>
        </div>
    </section>

    {{ form_end(form) }}
{% endblock %}