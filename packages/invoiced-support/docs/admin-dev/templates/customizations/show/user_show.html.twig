{% extends '@EasyAdmin/crud/detail.html.twig' %}
{% set user=entity.instance %}

{% block content_title %}
    <div class="avatar"><img src="{{ user.getAvatar(80) }}" alt="Avatar" /></div>
    <div class="fs-6 fw-light text-secondary">User # {{ user.getId }}</div>
    {{ user.getFullName }}
    <div class="badges with-avatar">
        {% if user.enabled %}<span class="badge badge-success">Enabled</span>{% else %}<span class="badge badge-danger">Disabled</span>{% endif %}
        {% if user.verified2fa %}<span class="badge badge-success">2FA</span>{% else %}<span class="badge badge-danger">No 2FA</span>{% endif %}
        {% if user.googleClaimedId %}<span class="badge badge-success">Google Account</span>{% endif %}
        {% if user.intuitClaimedId %}<span class="badge badge-success">Intuit Account</span>{% endif %}
        {% if user.microsoftClaimedId %}<span class="badge badge-success">Microsoft Account</span>{% endif %}
        {% if user.xeroClaimedId %}<span class="badge badge-success">Xero Account</span>{% endif %}
    </div>
{% endblock %}