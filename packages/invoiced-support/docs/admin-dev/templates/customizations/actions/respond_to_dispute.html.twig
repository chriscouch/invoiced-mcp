{% form_theme form with '@EasyAdmin/crud/form_theme.html.twig' %}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Respond To Dispute{% endblock %}

{% block body_class 'ea-edit respond-to-dispute-form' %}

{% block main %}
    {{ form_start(form) }}

    <fieldset>
        <legend class="with-icon">
            Respond to Dispute
        </legend>
        <p>
            Billing Profile: <strong>{{ billingProfileName }}</strong>
        </p>
        <div class="row">
            <div class="col-sm-4">
                {{ form_widget(form) }}
            </div>
        </div>
    </fieldset>

    <section class="content-footer">
        <div class="form-actions">
            <button type="submit" class="btn btn-primary btn">Save</button>
        </div>
    </section>

    {{ form_end(form) }}

{% endblock %}