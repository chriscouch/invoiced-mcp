{% form_theme form with '@EasyAdmin/crud/form_theme.html.twig' %}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Set Top Up Threshold Number Of Days{% endblock %}

{% block body_class 'ea-edit extend-trial-form' %}

{% block main %}
    {{ form_start(form) }}

    <div class="row">
        <div class="col-sm-4">
            <fieldset>
                <legend class="with-icon">
                    Set Top Up Threshold Number Of Days
                </legend>
                <p>
                    Set the Set Top Up Threshold Number Of Days for <strong>{{ companyName }}</strong>?
                </p>
                {{ form_widget(form) }}
            </fieldset>

            <section class="content-footer">
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary btn">Save</button>
                </div>
            </section>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}