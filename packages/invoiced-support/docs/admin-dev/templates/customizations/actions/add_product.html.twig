{% form_theme form with '@EasyAdmin/crud/form_theme.html.twig' %}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Add Product{% endblock %}

{% block body_class 'ea-edit extend-trial-form' %}

{% block main %}
    {{ form_start(form) }}

    <fieldset>
        <legend class="with-icon">
            Add Product
        </legend>
        <p>
            Which product do you want to add for <strong>{{ companyName }}</strong>?
        </p>
        <div class="row">
            <div class="col-md-4">
                {{ form_widget(form) }}
            </div>
        </div>
    </fieldset>

    <section class="content-footer">
        <div class="form-actions">
            <button type="submit" class="btn btn-primary btn">Save</button>
        </div>
    </section>

    {{ form_end(form) }}

{% endblock %}