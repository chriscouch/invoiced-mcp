<?xml version="1.0" encoding="UTF-8"?>
<!-- https://phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd" backupGlobals="false" colors="true"
         stopOnFailure="true" stopOnError="true" bootstrap="tests/bootstrap.php">
    <coverage includeUncoveredFiles="true">
        <include>
            <directory suffix=".php">src</directory>
        </include>
        <exclude>
            <file>src/Dashboard/announcements.php</file>
            <directory suffix="Test.php">src</directory>
            <directory suffix="Controller.php">src</directory>
            <directory suffix=".php">tests</directory>
            <directory suffix=".php">src/*/migrations</directory>
        </exclude>
    </coverage>
    <php>
        <ini name="error_reporting" value="-1"/>
        <ini name="memory_limit" value="-1"/>
        <env name="APP_ENV" value="test"/>
        <env name="SHELL_VERBOSITY" value="-1"/>
        <env name="PHPUNIT" value="true"/>
        <server name="SYMFONY_PHPUNIT_REMOVE" value=""/>
        <env name="SYMFONY_PHPUNIT_VERSION" value="9.5"/>
        <env name="SYMFONY_DEPRECATIONS_HELPER" value="disabled=1"/>
    </php>
    <listeners>
        <listener class="Symfony\Bridge\PhpUnit\SymfonyTestsListener"/>
        <listener class="Symfony\Bridge\PhpUnit\CoverageListener"/>
        <listener class="App\Core\Authentication\Libs\TestListener"/>
        <listener class="Mockery\Adapter\Phpunit\TestListener"/>
    </listeners>
    <testsuites>
        <testsuite name="App">
            <directory suffix="Test.php">tests</directory>
        </testsuite>
    </testsuites>
    <!--
      <logging>
        <log type="coverage-html" target="build/coverage" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-text" target="php://stdout" showOnlySummary="true" lowUpperBound="35" highLowerBound="70"/>
      </logging>
     -->
</phpunit>
