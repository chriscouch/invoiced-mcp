{
  "version": 1,
  "title": "Installment Aging Summary",
  "sections": [
    {
      "type": "table",
      "object": "payment_plan_installment",
      "title": "",
      "fields": [
        {
          "field": {
            "id": "invoice.customer.name"
          }
        },
        {
          "name": "Remaining Installments",
          "field": {
            "function":  "count"
          }
        },
        {
          "name": "Balance",
          "field": {
            "function": "sum",
            "arguments": [
              {
                "id": "balance"
              }
            ]
          }
        }
      ],
      "filter": [
        {
          "field": {
            "id": "invoice.paid"
          },
          "value": false
        },
        {
          "field": {
            "id": "invoice.voided"
          },
          "value": false
        },
        {
          "field": {
            "id": "invoice.closed"
          },
          "value": false
        },
        {
          "field": {
            "id": "invoice.draft"
          },
          "value": false
        },
        {
          "field": {
            "id": "invoice.currency"
          },
          "value": "$currency"
        },
        {
          "field": {
            "id": "balance"
          },
          "operator": ">",
          "value": 0
        },
        {
          "field": {
            "id": "invoice.date"
          },
          "operator": "<=",
          "value": "$now"
        }
      ],
      "group": [
        {
          "name": "Customer",
          "field": {
            "id": "invoice.customer.name"
          },
          "ascending": true,
          "expanded": false
        }
      ]
    }
  ]
}