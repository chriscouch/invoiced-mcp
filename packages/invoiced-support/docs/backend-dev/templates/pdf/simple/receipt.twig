<div class="container">
    <div class="title-bar">
        {% if company.logo %}
            <div class="logo">
                <img src="{{ company.logo }}" />
            </div>
            <div class="title">{% if theme.use_translations %}{{ trans('headers.receipt') }}{% else %}{{ theme.header_receipt }}{% endif %}</div>
        {% else %}
            <div class="title text">
                {{ company.name }}
            </div>
            <div class="title">{% if theme.use_translations %}{{ trans('headers.receipt') }}{% else %}{{ theme.header_receipt }}{% endif %}</div>
        {% endif %}
        <div></div>
    </div>

    <div class="spacer highlight-color-border"></div>

    <div class="context-holder">
        <div class="contact-from">
            <div class="field bolder">{% if theme.use_translations %}{{ trans('labels.bill_from') }}{% else %}{{ theme.from_title }}{% endif %}</div>
            <div class="name">{{ company.name }}</div>
            <div class="address">{{ company.address|nl2br }}</div>
            {% if company.email %}<div class="email">{{ company.email }}</div>{% endif %}
            {% if company.phone %}<div class="phone">{{ company.phone }}</div>{% endif %}
            {% if company.website %}<div class="website">{{ company.website }}</div>{% endif %}
        </div>

        <div class="context">
            <table class="context-table">
                {% if theme.show_customer_no %}
                    <tr class="field-holder">
                        <td class="field">{% if theme.use_translations %}{{ trans('labels.account_number') }}{% else %}{{ theme.customer_number_title }}{% endif %}</td>
                        <td class="value">{{ customer.number }}</td>
                    </tr>
                {% endif %}
                <tr class="field-holder">
                    <td class="field">{% if theme.use_translations %}{{ trans('labels.date') }}{% else %}{{ theme.date_title }}{% endif %}</td>
                    <td class="value">{{ transaction.date }}</td>
                </tr>
                <tr class="field-holder">
                    <td class="field">{% if theme.use_translations %}{{ trans('labels.amount') }}{% else %}{{ theme.amount_title }}{% endif %}</td>
                    <td class="value">{{ transaction.amount|money }}</td>
                </tr>
                {% for invoice in transaction.invoices %}
                    <tr class="field-holder">
                        <td class="field">{{ trans('labels.invoice') }}</td>
                        <td class="value">{{invoice.number}}</td>
                    </tr>
                {% endfor %}
                {% for creditNote in transaction.credit_notes %}
                    <tr class="field-holder">
                        <td class="field">{{ trans('labels.credit_note') }}</td>
                        <td class="value">{{creditNote.number}}</td>
                    </tr>
                {% endfor %}
                {% for estimate in transaction.estimates %}
                    <tr class="field-holder">
                        <td class="field">{{ trans('labels.estimate') }}</td>
                        <td class="value">{{estimate.number}}</td>
                    </tr>
                {% endfor %}
                {% if transaction.amount_refunded %}
                    <tr class="field-holder">
                        <td class="field">{{ trans('labels.refunded') }}</td>
                        <td class="value">{{ transaction.amount_refunded|money }}</td>
                    </tr>
                {% endif %}
                {% if transaction.amount_credited %}
                    <tr class="field-holder">
                        <td class="field">{{ trans('labels.credited') }}</td>
                        <td class="value">{{ transaction.amount_credited|money }}</td>
                    </tr>
                {% endif %}
                {% if transaction.amount_convenience_fee %}
                    <tr class="field-holder">
                        <td class="field">{{ trans('labels.convenience_fee') }}</td>
                        <td class="value">{{ transaction.amount_convenience_fee|money }}</td>
                    </tr>
                {% endif %}
                <tr class="field-holder">
                    <td class="field">{% if theme.use_translations %}{{ trans('labels.payment_method') }}{% else %}{{ theme.payment_method_title }}{% endif %}</td>
                    <td class="value">{{ transaction.method }}{% if transaction.payment_source %} - {{ transaction.payment_source }}{% endif %}</td>
                </tr>
                {% if transaction.check_no %}
                    <tr class="field-holder">
                        <td class="field">{% if theme.use_translations %}{{ trans('labels.check_no') }}{% else %}{{ theme.check_no_title }}{% endif %}</td>
                        <td class="value">{{ transaction.check_no }}</td>
                    </tr>
                {% endif %}
            </table>
        </div>
    </div>
    <div class="spacer highlight-color-border"></div>

    <div class="address-holder">
        <div class="contact-to bill">
            <div class="field">{% if theme.use_translations %}{{ trans('labels.bill_to') }}{% else %}{{ theme.to_title }}{% endif %}</div>
            <div class="value">
                {% if customer.attention_to %}<div class="attention_to">{{ trans('labels.attention_to') }}: {{ customer.attention_to }}</div>{% endif %}
                <div class="name">{{ customer.name }}</div>
                <div class="address">{{ customer.address|nl2br }}</div>
            </div>
        </div>
    </div>

    <div class="spacer highlight-color-border"></div>
    <p id="footer">{{ theme.receipt_footer }}</p>
</div>

