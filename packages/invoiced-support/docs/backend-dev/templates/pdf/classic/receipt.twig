<div class="two-col clearfix">
    <div class="title">{% if theme.use_translations %}{{ trans('headers.receipt') }}{% else %}{{ theme.header_receipt }}{% endif %}</div>

    <div class="col">
        <div class="logo">
            {% if company.logo %}<img src="{{ company.logo }}" />{% endif %}
        </div>

        <div class="contact from">
            <div class="value">
                <div class="name">{{ company.name }}</div>
                <div class="address">{{ company.address|nl2br }}</div>
                {% if company.email %}<div class="email">{{ company.email }}</div>{% endif %}
                {% if company.phone %}<div class="phone">{{ company.phone }}</div>{% endif %}
                {% if company.website %}<div class="website">{{ company.website }}</div>{% endif %}
            </div>
        </div>

        <div class="contact to">
            <div class="field">{% if theme.use_translations %}{{ trans('labels.bill_to') }}{% else %}{{ theme.to_title }}{% endif %}</div>
            <div class="value">
                {% if customer.attention_to %}<div class="attention_to">{{ trans('labels.attention_to') }}: {{ customer.attention_to }}</div>{% endif %}
                <div class="name">{{ customer.name }}</div>
                <div class="address">{{ customer.address|nl2br }}</div>
            </div>
        </div>
    </div>
</div>

<table id="details">
    {% if theme.show_customer_no %}
        <tr>
            <td>{% if theme.use_translations %}{{ trans('labels.account_number') }}{% else %}{{ theme.customer_number_title }}{% endif %}</td>
            <td>{{ customer.number }}</td>
        </tr>
    {% endif %}
    <tr>
        <td>{% if theme.use_translations %}{{ trans('labels.date') }}{% else %}{{ theme.date_title }}{% endif %}</td>
        <td>{{ transaction.date }}</td>
    </tr>
    <tr>
        <td>{% if theme.use_translations %}{{ trans('labels.amount') }}{% else %}{{ theme.amount_title }}{% endif %}</td>
        <td>{{ transaction.amount|money }}</td>
    </tr>
    {% if transaction.surcharge_fee %}
        <tr>
            <td>Surcharge Fee</td>
            <td>{{ transaction.surcharge_fee|money }}</td>
        </tr>
    {% endif %}
    {% for invoice in transaction.invoices %}
        <tr>
            <td>{{ trans('labels.invoice') }}</td>
            <td>{{invoice.number}}</td>
        </tr>
    {% endfor %}
    {% for creditNote in transaction.credit_notes %}
        <tr>
            <td>{{ trans('labels.credit_note') }}</td>
            <td>{{creditNote.number}}</td>
        </tr>
    {% endfor %}
    {% for estimate in transaction.estimates %}
        <tr>
            <td>{{ trans('labels.estimate') }}</td>
            <td>{{estimate.number}}</td>
        </tr>
    {% endfor %}
    {% if transaction.amount_refunded %}
        <tr>
            <td>{{ trans('labels.refunded') }}</td>
            <td>{{ transaction.amount_refunded|money }}</td>
        </tr>
    {% endif %}
    {% if transaction.amount_credited %}
        <tr>
            <td>{{ trans('labels.credited') }}</td>
            <td>{{ transaction.amount_credited|money }}</td>
        </tr>
    {% endif %}
    {% if transaction.amount_convenience_fee %}
        <tr>
            <td>{{ trans('labels.convenience_fee') }}</td>
            <td>{{ transaction.amount_convenience_fee|money }}</td>
        </tr>
    {% endif %}
    <tr>
        <td>{% if theme.use_translations %}{{ trans('labels.payment_method') }}{% else %}{{ theme.payment_method_title }}{% endif %}</td>
        <td>{{ transaction.method }}{% if transaction.payment_source %} - {{ transaction.payment_source }}{% endif %}</td>
    </tr>
    {% if transaction.check_no %}
        <tr>
            <td>{% if theme.use_translations %}{{ trans('labels.check_no') }}{% else %}{{ theme.check_no_title }}{% endif %}</td>
            <td>{{ transaction.check_no }}</td>
        </tr>
    {% endif %}
</table>

<p id="footer">{{ theme.receipt_footer }}</p>
