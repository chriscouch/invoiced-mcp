{% trans_default_domain 'general' %}
{% set title = 'Flywire Payments' %}
{% extends "integrations/parent.twig" %}
{% block main %}
    <div class="container">
        <div class="pt-5 pb-3">
            <a href="/">
                <img src="{{ asset("/img/flywire.svg") }}" alt="Flywire Payments" height="50" />
            </a>
        </div>
    </div>
    <div class="container bg-white card border py-5 mb-5">
        <div class="px-5 mb-5">
            <h1>Get Started with Flywire Payments</h1>
            <p class="fs-3 alert alert-danger">
                {{ error }}
            </p>
            {% if url is defined %}
                <p>
                    <a href="{{ url }}" class="btn btn-lg btn-outline-secondary">Fix the issue</a>
                </p>
            {% else %}
                <p>
                    <a href="{{ dashboardUrl }}/settings/payments/account" class="btn btn-lg btn-outline-secondary">Return to Invoiced</a>
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}