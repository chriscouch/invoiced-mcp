{% trans_default_domain 'customer_portal' %}
{% set title = 'titles.login'|trans %}
{% extends "customerPortal/parentLogo.twig" %}

{% block main %}
	<div class="container">
		<div class="row d-flex align-items-center mt-4 mt-md-5">
			<div class="pe-5 col-md-6">
				<div class="welcome-message fs-3">
					{% if settings.welcome_message %}
						{{ settings.welcome_message|nl2br }}
					{% else %}
						{{ 'messages.welcome_line1'|trans }}<br/><br/>
						{{ 'messages.welcome_line2'|trans }}
					{% endif %}
				</div>
			</div>
			<div class="col-md-6 mt-5 mt-md-0">
				<div class="card m-0 welcome-login">
					<h3 class="card-header">
						{{ 'titles.login'|trans }}
					</h3>
					<div class="card-body">
						<p>{{ 'login_email_intro'|trans }}</p>

						{% if error %}
							<div class="alert bg-danger-soft text-dark border border-danger">
								{{ error }}
							</div>
						{% endif %}

						<form action="/login" method="post" class="login-form">
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('customer_portal_login') }}" />
							<div class="form-group">
								<div class="form-floating mb-3">
									<input type="email" name="email" value="{{ email }}" class="form-control" id="inputEmail" placeholder="{{ 'labels.email_address'|trans }}" required autofocus />
									<label for="inputEmail">{{ 'labels.email_address'|trans }}</label>
								</div>
							</div>
							<div class="form-group mb-3 d-grid">
								<button class="btn btn-primary btn-lg">{{ 'buttons.send_sign_in_link'|trans }}</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}