{% trans_default_domain 'customer_portal' %}
{% set title = 'titles.verified_bank_account_thank_you'|trans %}
{% extends "customerPortal/parentFrameOneColumn.twig" %}

{% block left %}
	<div class="main">
		<p>
			{% if customer.autopay %}
                {{ 'messages.bank_account_verified_autopay'|trans }}
			{% else %}
                {{ 'messages.bank_account_verified'|trans }}
			{% endif %}
		</p>

		<div class="row actions">
			{% if not(customer.autopay) and paymentUrl %}
				<div class="col-sm-6">
					<a href="{{ paymentUrl }}" class="btn btn-primary">{{ 'buttons.pay_now'|trans }}</a>
				</div>
			{% elseif signedInCustomer and customerPortal.enabled() %}
				<div class="col-sm-6">
					<a href="{{ company.url }}" class="btn btn-primary">{{ 'buttons.go_to_my_account'|trans }}</a>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}