{% trans_default_domain 'customer_portal' %}
<link rel="stylesheet" type="text/css" href="{{ asset('/css/jquery-ui.min.css') }}" />
<script type="text/javascript" src="{{ asset('/js/jquery-ui.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('/js/jquery-ui-i18n.js') }}"></script>

<!-- Payment Instructions -->
<div class="form-section">
	<h4>{{ 'labels.payment_instructions'|trans }}</h4>
	<div class="payment-instructions">{{ paymentInstructions }}</div>
</div>

<div class="promise-to-pay expected-date-fields">
	<h4>{{ 'labels.promise_to_pay'|trans }}</h4>
	<p>{{ 'messages.promise_to_pay_description'|trans }}</p>

	<div class="form-section">
		<div class="field promise-to-pay-date">
			<label class="form-label">{{ 'labels.expected_arrival_date'|trans }}</label>
			<div class="input-group input-medium">
				<span class="input-group-text text-dark">
					<span class="far fa-calendar"></span>
				</span>
				<input type="text" class="form-control required expected-date" id="{{ dateFieldId }}" placeholder="{{ 'labels.date'|trans }}" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" />
				<input type="hidden" name="date" id="{{ dateFieldId }}Alt" />
			</div>
		</div>

		<div class="field payment-reference">
			<label class="form-label">{{ 'labels.payment_reference'|trans }}</label>
			<input type="text" class="form-control expected-date-reference input-medium" name="reference" placeholder="{{ 'labels.optional'|trans }}" />
		</div>

		<div class="field promise-to-pay-notes">
			<label class="form-label">{{ 'labels.expected_arrival_date_comments'|trans }}</label>
			<textarea class="form-control expected-date-notes" name="notes" placeholder="{{ 'labels.optional'|trans }}"></textarea>
		</div>
	</div>

	<div class="form-section nopadding">
		<div class="row actions">
			<div class="col-xs-12">
				<button type="button" class="btn btn-success payment-button offline-payment-button" data-payment-method="{{ paymentMethodId }}">
					{{ 'buttons.submit'|trans }}
				</button>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="{{ asset('/js/views/paymentForms/paymentInstructions.js') }}"></script>