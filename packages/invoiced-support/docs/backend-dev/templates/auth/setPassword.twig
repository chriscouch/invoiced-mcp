{% extends "auth/parent.twig" %}

{% block main %}

    <h1 class="logo">
        <a href="/">
            <img src="{{ asset("/img/logo.png") }}" width="137" height="35" alt="Invoiced" />
        </a>
    </h1>

    <div class="auth-page container">
        <h4 class="title">Setup Password</h4>

        <p>
            Please provide a password to finish setting up your account.
        </p>

        {% for error in errors %}
            <p class="alert alert-danger">
                {{ error|nl2br }}
            </p>
        {% endfor %}

        <form method="post" action="/verifyEmail/{{ token }}">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('set_password') }}" />
            <div class="form-group">
                <div class="floating-label-input">
                    <input type="password" name="password" class="form-control" required />
                    <span class="floating-label">Password (at least <em>8 characters</em>)</span>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg w-100">
                    Save
                </button>
            </div>
        </form>
    </div>

{% endblock %}
