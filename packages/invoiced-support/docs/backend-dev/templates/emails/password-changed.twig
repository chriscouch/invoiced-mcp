{% extends "emails/parent.twig" %}

{% block title %}Password Changed{% endblock %}

{% block content %}
<row>
    <columns>
        <p>Hi {{ username }},</p>

        <p>We are writing to inform you that your password was successfully changed on Invoiced.</p>

        <div style="background: #f9fafb; border-radius: 3px; padding: 15px; border: 1px solid #e7e9eb; margin: 15px 0;">
            {{ deviceType }}<br>
            Approximate Location: {{ location }}<br>
            IP address: {{ ip }}<br>
            {{ timestamp }}
        </div>

        <p>Best,<br>
        The team at Invoiced</p>
    </columns>
</row>
{% endblock %}