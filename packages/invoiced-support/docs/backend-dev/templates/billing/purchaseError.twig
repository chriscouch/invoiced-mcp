{% trans_default_domain 'general' %}
{% set title='Purchase' %}
{% set noNav = true %}
{% extends "billing/parent.twig" %}
{% block bodyClass %}{{ parent() }} d-flex align-items-center{% endblock %}

{% block main %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-5 col-xl-4 my-5 text-center">
                <div class="mb-4">
                    <img src="{{ asset('/img/logo.png') }}" alt="Invoiced" height="45"/>
                </div>
                <h1 class="display-4 mb-3">
                    {% if reason == 'expired' %}
                        Page has expired
                    {% elseif reason == 'completed' %}
                        Purchase complete
                    {% endif %}
                </h1>
                <p class="text-muted mb-4 fs-3">
                    {% if reason == 'expired' %}
                        This purchase page has expired. Please contact your Invoiced representative for a new purchase page.
                    {% elseif reason == 'completed' %}
                        This purchase has already been completed. Thank you for your business!
                    {% endif %}
                </p>
                <a href="https://invoiced.com" class="btn btn-lg btn-primary">
                    Return to home page
                </a>
            </div>
        </div>
    </div>
{% endblock %}
