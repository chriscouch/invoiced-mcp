{% set title='Activate' %}
{% set metaDescription='Activate your Invoiced account' %}
{% set companyId = app.request.query.get('company') %}
{% set noNav = true %}
{% extends "billing/parent.twig" %}

{% block bodyClass %}bg-auth border-top border-top-3 border-primary{% endblock %}

{% block header %}
    <style type="text/css">
        .pricing-table > thead > tr > th {
            text-transform: none;
            text-align: center;
            border: none;
            font-weight: normal;
            letter-spacing: 0;
        }

        .pricing-table > tbody > tr > td:first-child {
            min-width: 250px;
            max-width: 400px;
        }

        .check-icon {
            font-size: 24px;
            text-align: center;
        }

        .pricing-table > thead > tr > th:nth-child(2), .pricing-table > tbody > tr > td:nth-child(2).check-icon span {
            color: #ff8575;
        }

        .pricing-table > thead > tr > th:nth-child(3), .pricing-table > tbody > tr > td:nth-child(3).check-icon span {
            color: #009e74;
        }

        .pricing-table > thead > tr > th:nth-child(4), .pricing-table > tbody > tr > td:nth-child(4).check-icon span {
            color: #10806f;
        }

        .pricing-table > thead > tr > th:nth-child(5), .pricing-table > tbody > tr > td:nth-child(5).check-icon span {
            color: #0a4e44;
        }

        .btn-lg, .btn-lg:hover {
            border-radius: 4px;
            color: #fff;
        }

        .btn-coral, .btn-coral:hover {
            background: #ff8575;
        }

        .btn-green-1, .btn-green-1:hover {
            background: #009e74;
        }

        .btn-green-2, .btn-green-2:hover {
            background: #10806f;
        }

        .btn-green-3, .btn-green-3:hover {
            background: #0a4e44;
        }

        .pricing-table > tbody > tr:nth-child(2n+1):not(.no-stripe) > td {
            background-color: #f9fbfd;
            color: #12263f;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
{% endblock %}

{% block main %}

    {% if app.environment != 'production' %}
        <div class="test-mode"></div>
    {% endif %}

    {% block content %}{% endblock %}

    <script type="text/javascript">
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));

        $(function() {
            $('.select-price-yearly').click(function() {
                $(this).addClass('btn-info').removeClass('btn-light');
                $('.select-price-monthly').removeClass('btn-info').addClass('btn-light');
                $('.price-yearly').removeClass('d-none');
                $('.price-monthly').addClass('d-none');
            });

            $('.select-price-monthly').click(function() {
                $(this).addClass('btn-info').removeClass('btn-light');
                $('.select-price-yearly').removeClass('btn-info').addClass('btn-light');
                $('.price-yearly').addClass('d-none');
                $('.price-monthly').removeClass('d-none');
            });
        });
    </script>
{% endblock %}
